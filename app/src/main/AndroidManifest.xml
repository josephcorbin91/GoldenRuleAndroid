<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jco.goldenrule">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="jco.goldenrule.Applications.LapitChatApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <receiver android:name="jco.goldenrule.BroadcastReceivers.AlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.permission.QUICKBOOT_POWERON"/>

            </intent-filter>

        </receiver>


        <receiver android:name="jco.goldenrule.BroadcastReceivers.BootCompletedReceiver">

        </receiver>





        <service android:name="jco.goldenrule.Services.Firebase.FirebaseMessagingService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>
        <service android:name="jco.goldenrule.Services.Firebase.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="jco.goldenrule.Activities.InfoActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="jco.goldenrule.Activities.SettingsActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="jco.goldenrule.Activities.LocatorActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name="jco.goldenrule.Activities.LoginRegistrationActivities.StartActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jco.goldenrule.Activities.LoginRegistrationActivities.RegisterActivity"
            android:parentActivityName="jco.goldenrule.Activities.LoginRegistrationActivities.StartActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jco.goldenrule.Activities.LoginRegistrationActivities.LoginActivity"
            android:parentActivityName="jco.goldenrule.Activities.LoginRegistrationActivities.StartActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="jco.goldenrule.Activities.LoginRegistrationActivities.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="jco.goldenrule.Activities.ChatActivities.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jco.goldenrule.Activities.ChatActivities.StatusActivity"
            android:parentActivityName="jco.goldenrule.Activities.ChatActivities.SettingsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="jco.goldenrule.Activities.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"
            android:screenOrientation="portrait"/>
        <activity
            android:name="jco.goldenrule.Activities.ChatActivities.UsersActivity"
            android:parentActivityName="jco.goldenrule.Activities.ChatActivities.MainActivityChat"
            android:screenOrientation="portrait"/>
        <activity android:name="jco.goldenrule.Activities.ChatActivities.ProfileActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="in.tvac.akshaye.lapitchat_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="jco.goldenrule.Activities.ChatActivities.ChatActivity"
            android:parentActivityName="jco.goldenrule.Activities.ChatActivities.MainActivityChat"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>